<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
    <head>
        <title>eStore Gunny</title>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
        <link rel="shortcut icon" href="../favicon.ico" type="image/x-icon"/>
        <link rel="stylesheet" type="text/css" href="css/style.css" />
        <link href="css/home.css" rel="stylesheet" />
        <script type="text/javascript" src="./js/jquery-1.7.2.min.js"></script>        
        <script type="text/javascript" src="js/jquery.corner.js"></script>
        <script type="text/javascript" src="js/eStore.js"></script>
		<script src="js/cufon-yui.js" type="text/javascript"></script>
		<script src="js/ChunkFive_400.font.js" type="text/javascript"></script>        
        <script type="text/javascript" src="js/webtoolkit.md5.js"></script>
		<script type="text/javascript">			
		
		    $(document).ready(function () {
		        $("#password").keypress(function (e) {
		            if (e.keyCode == 13) {
		                checklogin();
		            }
		        });
		    });

		    Cufon.replace('h1', { textShadow: '1px 1px #fff' });
		    Cufon.replace('h2', { textShadow: '1px 1px #fff' });
		    Cufon.replace('h3', { textShadow: '1px 1px #000' });
		    Cufon.replace('.back');

		    function xmlhttpPost(strURL, type) {
		        showObj();
		        var dataStr = getquerystring();
		        if (type == 2) {
		            dataStr = getquerydonereg();
		        }
		        $.ajax({
		            type: 'GET',
		            url: strURL,
		            data: dataStr,
		            success: function (data_revert) {

		                if (data_revert == "ok") {
		                    location.replace("estore.aspx");
		                }
		                else {
		                    $("#DynamicContent").css({ display: "none" });
		                    showError(data_revert, 'red');
		                }

		            }
		        });

		    }
		    function getquerystring() {
		        var username = $("#username").val();
		        var password = MD5($("#password").val());
		        qstr = 'username=' + escape(username) + '&password=' + escape(password);
		        return qstr;
		    }
		    function checklogin() {
		        if ($("#username").val() == '') {
		            //return true;
		            showError('Bạn chưa nhập Tài khoản', 'red');
		            return false;
		        }
		        else if ($("#password").val() == '') {
		            //return true;
		            showError('Bạn chưa nhập Mật khẩu', 'red');
		            return false;
		        }
		        else {
		            xmlhttpPost("checkuser.ashx", 1);
		            return false;
		        }

		    }

		    
             </script>
        <style>

        .auto-style1
            {
                width: 130px;
            }

        </style>
    </head>
    <body>
		<div class="wrapper">
			<h1>Cashshop for DDTank v1.0</h1>
			<br/>
			<div class="content">
				<div id="form_wrapper" class="form_wrapper">					
					<form class="login active">
						<h3>Login</h3>
						<div>
							<label>Tài khoản:</label>
							<input id="username" name="username"  type="text" />
							<span class="error">This is an error</span>
						</div>
						<div>
							<label>Mật khẩu: </label>
							<input id="password" name="password"  type="password" />
							<span class="error">This is an error</span>
						</div>
						<div class="bottom">
							<div class="remember"><input type="checkbox" /><span>Keep me logged in</span></div>
							<input type="submit" value="Login" onclick="return checklogin();"/>
							<div class="clear"></div>
						</div>
					</form>					
				</div>
				<div class="clear"></div>
			</div>
			
		</div>
		
        <div id="DynamicContent">
	<div id="loading" >
      Ðang sử lý, xin chờ trong giây lát!
	  <img alt=""  src="images/loading.gif" />
     </div>               		
	</div>

    <div id="ErrorContent">
	    <div id="content" >
        </div>               		
	</div>
        <div id="TB_overlayBG">
</div>
		
    </body>
</html>